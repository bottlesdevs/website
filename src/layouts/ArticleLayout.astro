---
import Layout from "../layouts/Layout.astro";
const { frontmatter } = Astro.props;
const allPosts = await Astro.glob("../pages/posts/*.md");

const generateBrief = (content: string) => {
  const plainText = content.replace(/(<([^>]+)>)/gi, "");
  return plainText.slice(0, 250) + (plainText.length > 250 ? "..." : "");
};

const relatedPosts = allPosts
  .filter((post) => post.url !== Astro.url.toString())
  .sort(
    (a, b) =>
      Number(new Date(b.frontmatter.pubDate)) -
      Number(new Date(a.frontmatter.pubDate))
  )
  .slice(0, 3);
---

<Layout title={frontmatter.title}>
  <section class="py-20 bg-[var(--md-sys-color-surface)]">
    <div class="container mx-auto px-4">
      <div class="flex flex-col items-center text-[var(--md-sys-color-on-surface)]">
        <h1 class="text-5xl font-bold mb-4 text-center">
          {frontmatter.title}
        </h1>
        <p class="text-lg mb-4">
          Published on <span class="font-semibold">{frontmatter.pubDate.slice(0, 10)}</span>
        </p>
      </div>
    </div>
  </section>

  <section class="py-10 max-w-(--breakpoint-lg) mx-auto">
    <div class="container mx-auto px-4">
      <article class="prose lg:prose-xl max-w-none dark:prose-invert">
        <slot />
      </article>
    </div>
  </section>

  <section class="py-10 bg-[var(--md-sys-color-surface)]">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-6 text-[var(--md-sys-color-on-surface)]">
        Related Articles
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        {
          relatedPosts.map((post) => {
            const brief = generateBrief(post.compiledContent());
            return (
              <a
                href={post.url}
                class="md-card hover:shadow-xl transition-shadow block"
              >
                <div class="relative p-6 flex gap-2 flex-col items-start">
                  <h3 class="text-2xl font-bold mb-2">
                    {post.frontmatter.title}
                  </h3>
                  <p class="mb-4">{brief}</p>
                  <span class="text-sm bg-[var(--md-sys-color-primary)]/20 text-[var(--md-sys-color-primary)] px-4 py-1 rounded-full">
                    {new Date(post.frontmatter.pubDate).toLocaleDateString()}
                  </span>
                </div>
              </a>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
